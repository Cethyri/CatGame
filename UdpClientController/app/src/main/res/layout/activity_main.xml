<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.julianreyes.udpclientcontroller.MainActivity">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Server :"
        android:onClick="radioClicked"
        android:layout_alignBaseline="@+id/Enter_IP_id"
        android:layout_alignBottom="@+id/Enter_IP_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/X_id"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:text="X"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/Enter_IP_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/B_id"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_below="@+id/A_id"
        android:layout_toRightOf="@+id/A_id"
        android:layout_toEndOf="@+id/A_id" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/A_id"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:layout_below="@+id/X_id"
        android:layout_toLeftOf="@+id/X_id"
        android:layout_toStartOf="@+id/X_id" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/Y_id"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Y"
        android:layout_below="@+id/X_id"
        android:layout_toRightOf="@+id/B_id"
        android:layout_toEndOf="@+id/B_id" />

    <Button
        android:background="@drawable/roundbutton"
        android:id="@+id/LEFT_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/roundbutton"
        android:id="@+id/RIGHT_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:layout_alignBaseline="@+id/LEFT_id"
        android:layout_alignBottom="@+id/LEFT_id"
        android:layout_toRightOf="@+id/radioButton"
        android:layout_toEndOf="@+id/radioButton" />

    <EditText
        android:id="@+id/Enter_IP_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/radioButton"
        android:layout_toRightOf="@+id/radioButton"
        android:ems="6"
        android:inputType="text" />


</RelativeLayout>
