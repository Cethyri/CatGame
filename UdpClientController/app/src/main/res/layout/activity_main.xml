<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.julianreyes.udpclientcontroller.MainActivity">

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Server :"
        android:onClick="radioClicked"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Enter_IP_id"
        android:layout_alignStart="@+id/Enter_IP_id" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/X_id"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="X"
        android:layout_above="@+id/Y_id"
        android:layout_toLeftOf="@+id/Y_id"
        android:layout_toStartOf="@+id/Y_id" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/B_id"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="B"
        android:layout_below="@+id/A_id"
        android:layout_toLeftOf="@+id/Y_id"
        android:layout_toStartOf="@+id/Y_id" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/A_id"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="A"
        android:layout_alignBaseline="@+id/RIGHT_id"
        android:layout_alignBottom="@+id/RIGHT_id"
        android:layout_toLeftOf="@+id/X_id"
        android:layout_toStartOf="@+id/X_id" />

    <Button
        android:background="@drawable/roundbutton"
        android:rotation="45"
        android:id="@+id/Y_id"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:text="Y"
        android:layout_above="@+id/B_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <Button
        android:background="@drawable/roundbutton"
        android:id="@+id/LEFT_id"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Left"
        android:layout_alignTop="@+id/RIGHT_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/roundbutton"
        android:id="@+id/RIGHT_id"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Right"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/LEFT_id"
        android:layout_toEndOf="@+id/LEFT_id"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/Enter_IP_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:inputType="text"
        android:layout_below="@+id/radioButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/roundbutton"
        android:id="@+id/PLAY_CLICK_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Click Me"
        android:onClick="playClicker"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/Enter_IP_id"
        android:layout_alignRight="@+id/radioButton"
        android:layout_alignEnd="@+id/radioButton"
        android:layout_marginTop="13dp" />


</RelativeLayout>
